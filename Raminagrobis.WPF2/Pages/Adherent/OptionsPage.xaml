<Page x:Class="Raminagrobis.WPF2.Pages.Adherent.OptionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Raminagrobis.WPF2.Pages.Adherent"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OptionsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="BtnModifier" Click="BtnModifier_Click">Modifier</Button>
        <Button Grid.Row="2" x:Name="BtnSupprimer" Click="BtnSupprimer_Click">Supprimer</Button>
        <Button Grid.Row="4" x:Name="BtnAjouterPanier" Click="BtnAjouterPanier_Click">Ajouter un Panier</Button>
    </Grid>
</Page>
